#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios:: sync_with_stdio(false);
    cin.tie(nullptr);
    
    int t;
    cin >> t;
    while(t--)
    {
        int n;
        cin >> n;
        vector<int> a(n);
        int s = 0;
        for(int i = 0; i < n; i++)
        {
            cin >> a[i];
            s += a[i];
        }
        sort(a.begin(), a.end());
        if(n < 3)
        {
            cout << "-1" << endl;
        }
        else
        {
            int x = a[n / 2] * 2 * n;
            cout << max(0ll, x + 1 - s) << endl;
        }
    }

    return 0;
}

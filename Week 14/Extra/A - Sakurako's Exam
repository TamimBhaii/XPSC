#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    int t;
    cin >> t;
    while(t--)
    {
        int num1, num2;
        cin >> num1 >> num2;
        if(num1 % 2 == 0 && (num2 % 2 == 0 || num1 != 0))
            cout << "YES" << endl;
        else
            cout << "NO" << endl;
    }
    return 0;
}

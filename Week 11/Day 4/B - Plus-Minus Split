#include <bits/stdc++.h>
using namespace std;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        string s;
        cin >> s;
        long long ans = 0;

        for (auto &c : s)
        {
            if (c == '-')
            {
                ans--;
            }
            else
            {
                ans++;
            }
        }
        cout << abs(ans) << endl;
    }
    return 0;
}

#include<bits/stdc++.h>
using namespace std;
int main()
{
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    long long t, n, x, c1, c2;
    cin>>t;
    while(t--)
    {
        cin>>n;
        c1 = c2 = 0;
        while(n--)
        {
            cin>>x;
            if(x==0)
            {
                c1++;
            }
            else if(x==1)
            {
                c2++;
            }
        }
        cout<<(1LL<<c1)*c2<<endl;
    }
    
    return 0;
}
